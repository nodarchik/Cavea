{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./build",
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "lib": ["es6", "dom"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  